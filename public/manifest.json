{
  "manifest_version": 3,
  "name": "Touchless Control",
  "version": "1.0",
  "description": "Extension to surf the web using gestures and voice",
  "action": {
    "default_popup": "index.html",
    "default_icon": "touchless-logo.png"
  },
  "permissions": [
    "camera",
    "microphone"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; object-src 'self'"
  }
}
